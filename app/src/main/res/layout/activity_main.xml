<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/egg" />

        <TextView
            android:id="@+id/timertTextView"
            android:layout_width="187dp"
            android:layout_height="98dp"
            android:layout_alignStart="@+id/imageView"
            android:layout_alignEnd="@+id/imageView"
            android:layout_centerInParent="true"
            android:layout_marginStart="89dp"
            android:layout_marginEnd="44dp"
            android:text="00:30"
            android:textColor="#D81B60"
            android:textSize="70sp"
            android:textStyle="bold"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignLeft="@+id/imageView"
            android:layout_marginLeft="89dp"
            android:layout_marginRight="44dp" />

        <Button
            android:id="@+id/startStopButton"
            android:layout_width="207dp"
            android:layout_height="76dp"
            android:layout_below="@+id/timertTextView"
            android:layout_alignEnd="@+id/timertTextView"
            android:layout_alignRight="@+id/timertTextView"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="200sp"
            android:onClick="controlTimer"
            android:text="@string/start"
            android:textColor="#FDD835"
            android:textSize="36sp"
            android:textStyle="bold"
            android:typeface="normal"
            tools:text="Start" />

        <SeekBar
            android:id="@+id/timersSeekBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:rotation="0" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>